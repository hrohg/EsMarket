<Window x:Class="UserControls.ControlPanel.Controls.SelectDateIntermediate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectDateIntermediate" Height="100" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Սկիզբ"/>
            <DatePicker Name="DtpStartDate" SelectedDate="{Binding Path=Invoice.CreateDate, StringFormat='dd.MM.yyyy'}" Margin="3"
                        FirstDayOfWeek="Monday" HorizontalAlignment="Right" />
            
            <Label x:Name="LblEnd" Content="Ավարտ"/>
            <DatePicker x:Name="DtpEndDate" SelectedDate="{Binding Path=Invoice.CreateDate, StringFormat='dd.MM.yyyy'}" Margin="3"
                        FirstDayOfWeek="Monday" HorizontalAlignment="Right" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="3">
            <Button  Width="100" Content="Հաստատել" Margin="1" Click="BtnOk_Click"/>
            <Button  Width="100" Content="Թողնել" Margin="1" Click="BtnCancel_Click"/>

        </StackPanel>
    </Grid>
</Window>
