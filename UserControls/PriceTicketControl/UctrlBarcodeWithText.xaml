<UserControl x:Class="UserControls.PriceTicketControl.UctrlBarcodeWithText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:barcodes="clr-namespace:UserControls.PriceTicketControl"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" Width="100">
    <Grid>
        <StackPanel Margin ="1">
            <TextBlock Text="{Binding Path=Description}" FontSize="8" TextWrapping="Wrap"/>
            <barcodes:Ean13BarcodeControl x:Name="BarcodeControl" MinHeight="15"  BarHeight="60" BarMinWidth="1.3" BarMaxWidth="2" Margin="1" VerticalAlignment="Top"
                                    Barcode="{Binding Path=BarcodeString}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Path=Code}" FontSize="8" Margin="1 0"/>
                <TextBlock Text="{Binding Path=Price, StringFormat='###,###.##'}" Margin="1 0" FontSize="9"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
