<UserControl x:Class="UserControls.Views.CustomControls.SaleUctrl"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:filter="clr-namespace:Shared.Helpers;assembly=Shared"
         xmlns:extendedControls="clr-namespace:UserControls.ControlPanel.Controls.ExtendedControls"
         MinHeight="450"
         MinWidth="700"
         Width="Auto"
         mc:Ignorable="d"
         Name ="CtrlInvoice" Loaded="CtrlInvoice_Loaded" KeyUp="CtrlInvoice_KeyUp">
    <Grid Width="Auto">
        <Grid.InputBindings>
            <KeyBinding Gesture="Ctrl+F" Command="{Binding GetProductCommand}" CommandParameter="{x:Static filter:FiltersUsage.WithoutFilters}"/>
            <KeyBinding Gesture="Ctrl+Shift+F" Command="{Binding GetProductCommand}" CommandParameter="{x:Static filter:FiltersUsage.WithFilters}"/>
            <KeyBinding Gesture="Ctrl+P" Command="{Binding PrintInvoiceCommand}" CommandParameter="{x:Static filter:PrintSizeEnum.Normal}"/>
            <KeyBinding Gesture="Ctrl+Shift+P" Command="{Binding PrintInvoiceCommand}" CommandParameter="{x:Static filter:PrintSizeEnum.Small}"/>
            <KeyBinding Gesture="Ctrl+Shift+X" Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}"/>
            <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveInvoiceCommand}"/>
            <KeyBinding Gesture="Ctrl+Shift+A" Command="{Binding ApproveInvoiceAndCloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}"/>
        </Grid.InputBindings>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Հիշել Ctrl+S" Command="{Binding SaveInvoiceCommand}"></MenuItem>
                <MenuItem Header="Հաստատել (Փակել) Ctrl+A" Command="{Binding ApproveInvoiceAndCloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=TabItem}}" Tag="1"></MenuItem>
                <MenuItem Header="Հաստատել տպել Ctrl+P" Tag="2" IsEnabled="False" Command="{Binding PrintInvoiceCommand}" CommandParameter="{x:Static filter:PrintSizeEnum.Normal}"></MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Expander  Header="Ապրանքագիր" BorderBrush="Blue" IsExpanded="False" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Unloaded="SaleUctrl_Unloaded">
                        <GroupBox.Header>
                            <Label Content="Պատվիրատու" FontSize="10"/>
                        </GroupBox.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="TxtPartner" FontSize="15" Text="{Binding Partner.Description, Mode=OneWay}" IsReadOnly="True" TabIndex="0" >
                                <TextBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Ընտրել գործընկեր" Click="CmMiChoosePartner_Click"></MenuItem>
                                        <MenuItem Header="Ընտրել մատակարար" Click="CmMiChoosePartner_Click" Tag="1"></MenuItem>
                                        <MenuItem Header="Ընտրել դիլլեր" Click="CmMiChoosePartner_Click" Tag="2"></MenuItem>
                                        <MenuItem Header="Ընտրել պատվիրատու" Click="CmMiChoosePartner_Click" Tag="3"></MenuItem>
                                    </ContextMenu>
                                </TextBox.ContextMenu>
                            </TextBox>
                            <StackPanel Grid.Column="1" Margin="1" VerticalAlignment="Bottom">
                                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Label Content="Կանխավճար" VerticalAlignment="Center" AllowDrop="True" HorizontalContentAlignment="Right" FontSize="12"/>
                                    <TextBox Text="{Binding Partner.Credit, StringFormat=N}" Width="100" Foreground="Blue" VerticalAlignment="Center" HorizontalContentAlignment="Right" FontSize="15" Margin="1" IsReadOnly="True"></TextBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Label Content="Դեբետ" VerticalAlignment="Center" AllowDrop="True" HorizontalContentAlignment="Right" FontSize="12"/>
                                    <TextBox Text="{Binding Partner.Debit, StringFormat=N}" Foreground="Blue" Width="100" VerticalAlignment="Center" HorizontalContentAlignment="Right" IsReadOnly="True" FontSize="15" Margin="1"></TextBox>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="1" HorizontalAlignment="Right">
                        <GroupBox.Header>
                            <Label Content="Ապրանքագիր" FontSize="12"/>
                        </GroupBox.Header>
                        <StackPanel HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Content="Ապրանքագիր" HorizontalAlignment="Left" VerticalAlignment="Center" Width="85" FontSize="10" HorizontalContentAlignment="Right"/>
                                <Label Content="{Binding Invoice.InvoiceNumber}" Foreground="Blue" Width="100" Margin ="1"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Content="Ստեղծված է" HorizontalAlignment="Left"  Width="85" VerticalAlignment="Center" FontSize="10" HorizontalContentAlignment="Right"/>
                                <TextBlock  Text="{Binding Path=Invoice.CreateDate, StringFormat='dd.MM.yyyy'}" Foreground="Blue" Width="100" Margin ="1" VerticalAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Content="Հաստատված է" HorizontalAlignment="Left"  Width="85" VerticalAlignment="Center" FontSize="10" HorizontalContentAlignment="Right"/>
                                <TextBlock Text="{Binding Invoice.ApproveDate, StringFormat='dd.MM.yyyy'}" Foreground="Blue" Width="100" Margin ="1" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Expander>
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Կոդ"  VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                    <TextBox Grid.Row="1" Name="TxtCode" Text="{Binding Path=InvoiceItem.Code, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35" FontSize="20"  IsReadOnlyCaretVisible="True" Width="150" TabIndex="1" 
                             KeyDown="TxtCode_KeyDown" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="1" />
                    <Label Grid.Row="0" Content="Անվանում" VerticalAlignment="Center"  HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="150,0,0,0" FontSize="12"/>
                    <TextBox Grid.Row="1" Name="TxtDescription" Text="{Binding Path=InvoiceItem.Description, UpdateSourceTrigger=PropertyChanged}"
                   Height="35" FontSize="20" VerticalContentAlignment="Center" Margin="152,1,106,1" VerticalAlignment="Center" IsReadOnly="True">
                        <TextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Ընտրել ըստ անվանման"  Command="{Binding GetProductCommand}" CommandParameter="True" Click="CmMiChooseProductByName_Click"/>
                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>
                    <Label Grid.Row="0" Content="Գին"  VerticalAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,0,65,0" FontSize="12"/>
                    <TextBox Grid.Row="1" Name="TxtPrice" Text="{Binding Path=InvoiceItem.Price, UpdateSourceTrigger=PropertyChanged, StringFormat=N}" IsReadOnly="{Binding Path = DenayChangePrice}" Width="105" Height="35" FontSize="20" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Right" KeyDown="TxtPrice_KeyDown" TabIndex="2"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3">
                <CheckBox Name="CbAddSingle" Content="Ավելացնել մեկական" IsChecked="{Binding SaleBySingle}"  Margin="5" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>
                <Button Name="BtnAddItem" Content="Ավելացնել" Width ="100" Padding="3" Command="{Binding AddInvoiceItemCommand}" Click="BtnAddItem_Click" TabIndex="3"/>
            </StackPanel>
        </StackPanel>

        <extendedControls:ExtendedDataGrid Grid.Row="1" x:Name="DgInvoiceItems"   ItemsSource="{Binding InvoiceItems}" SelectedItem="{Binding SelectedInvoiceItem}" VerticalContentAlignment="Stretch" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False"  FontSize="14" >
            <DataGrid.Resources>
                <Style x:Key="CellRightAlign">
                    <Setter Property="Control.HorizontalAlignment" Value="Right" />
                </Style>
                <ContextMenu x:Key="RowMenu">
                    <MenuItem Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.RemoveInvoiceItemCommand}" CommandParameter="{Binding InvoiceItem.Id}" Header="Հեռացնել"/>
                </ContextMenu>
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu" Value="{StaticResource RowMenu}"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="ՀՀ" Binding="{Binding Index, Mode=OneWay}"/>
                <DataGridTextColumn IsReadOnly="True" Header="Կոդ" Binding="{Binding Code}" />
                <DataGridTextColumn IsReadOnly="True" Header="Բարկոդ" Binding="{Binding Product.Barcode}" />
                <DataGridTextColumn IsReadOnly="True" Header="Անվանում" Binding="{Binding Description}" />
                <DataGridTextColumn IsReadOnly="True" Header="Չմ" Binding="{Binding Mu}" />
                <DataGridTextColumn IsReadOnly="False" Header="Քանակ" Binding="{Binding Path=Quantity, UpdateSourceTrigger=PropertyChanged, StringFormat=N3}" CellStyle="{StaticResource CellRightAlign}" />
                <DataGridTextColumn IsReadOnly="True" Header="Գին" Binding="{Binding Path=Price, UpdateSourceTrigger=PropertyChanged, StringFormat='#,###.##'}" CellStyle="{StaticResource CellRightAlign}" />
                <DataGridTextColumn IsReadOnly="True" Header="Գումար" Binding="{Binding Path=Amount, StringFormat=N2}" CellStyle="{StaticResource CellRightAlign}"/>
                <DataGridTextColumn IsReadOnly="True" Header="Զեղչ" Binding="{Binding Path=Discount, StringFormat=N2}" CellStyle="{StaticResource CellRightAlign}"/>
                <DataGridTextColumn IsReadOnly="True" Header="Նշումներ" Binding="{Binding Path=Note}" />
            </DataGrid.Columns>
        </extendedControls:ExtendedDataGrid>
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Content="Նշումներ" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" FontSize="12"/>
                    <TextBox Text="{Binding Invoice.Notes, UpdateSourceTrigger=PropertyChanged}" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Label Content="Գումար" VerticalAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Right" FontSize="12" Foreground="Green"/>
                        <TextBox Text="{Binding Path=Invoice.Amount, StringFormat=N}" VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100" FontSize="15" IsEnabled="False" Foreground="Blue  "/>
                        <Label Content="Զեղչ" VerticalAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Right" FontSize="12" Width="50"  Foreground="Green"/>
                        <TextBox Text="{Binding Path=Invoice.Discount, StringFormat=N}" IsEnabled="False"  VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="50" FontSize="15" Foreground="Blue"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Label Content="Ընդամենը" VerticalAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Right" FontSize="12"  Foreground="Green"/>
                        <TextBox Text="{Binding Path=Invoice.Total, StringFormat=N}"  VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100" FontSize="15" IsReadOnly="True" Foreground="Blue"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Expander Header ="Վճարում" IsExpanded="True" BorderBrush="Blue">
                <StackPanel  Orientation="Horizontal"  HorizontalAlignment="Right" CanHorizontallyScroll="True">
                    <TextBlock Foreground="Red" FontSize="60" Text="{Binding Path=Invoice.Total, StringFormat='###,###'}"/>
                    <GroupBox>
                        <GroupBox.Header>
                            <Label Content="Վճարում" FontSize="10"/>
                        </GroupBox.Header>
                        <StackPanel Orientation="Horizontal">

                            <StackPanel VerticalAlignment="Bottom" >
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Label Content="Կանխիկ" VerticalAlignment="Center" />
                                    <TextBox Name="TxtPaid" Text="{Binding Path=InvoicePaid.Paid, StringFormat='#,###.##', TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
               BorderThickness="1" BorderBrush="Black" Margin="1"
   VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100"
   FontSize="15" Height="25" Foreground="Blue" TabIndex="4"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment =" Right">
                                    <Label Content="Անկանխիկ" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>

                                    <TextBox Text="{Binding Path=InvoicePaid.ByCheck, StringFormat='#,###.##', TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
               BorderThickness="1" BorderBrush="Black" Margin="1"
   VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100"
   FontSize="15" Height="25" Foreground="Blue" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Bottom" >
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Label Content="Կանխավճար" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding InvoicePaid.ReceivedPrepayment, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
  BorderThickness="1" BorderBrush="Black" Margin="1"
  VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100" FontSize="15" Height="25" Foreground="Blue" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment =" Right">
                                    <TextBlock Text="Դեբիտորական պարտք" VerticalAlignment="Center" Width="100" TextWrapping="Wrap" TextAlignment="Right" />

                                    <TextBox Text="{Binding InvoicePaid.AccountsReceivable, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
  BorderThickness="1" BorderBrush="Black" Margin="1"
  VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100" FontSize="15" Height="25" Foreground="Blue"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox>
                        <GroupBox.Header>
                            <Label Content="Մանր" FontSize="10"/>
                        </GroupBox.Header>
                        <StackPanel VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Content="Կանխիկ" VerticalAlignment="Center" Foreground="Green"/>
                                <TextBox Text="{Binding Path=InvoicePaid.Change, Mode=OneWay, StringFormat=N}" IsReadOnly="True"
                 BorderThickness="1"  VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100"
                 FontSize="15" Height="25" Margin="1" Foreground="Green"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal ">
                                <Label Content="Կանխավճար" VerticalAlignment="Center" Foreground="Green"/>
                                <TextBox Text="{Binding Path=InvoicePaid.Prepayment, StringFormat=N}"  VerticalAlignment="Center" HorizontalContentAlignment="Right"
                 Width="100" FontSize="15" Height="25" Margin="1" Foreground="Green" IsReadOnly="True"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Expander>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10, 0, 0">
                <Menu>
                    <MenuItem Header="Բեռնել">
                        <MenuItem Header="Ապրանքագիր Xml" Command="{Binding ExportInvoiceToXmlCommand}"/>
                        <MenuItem Header="Ապրանքագիր Excel" Command="{Binding ImportInvoiceCommand}"/>
                        <MenuItem Header="Инвоисе Excel" Command="{Binding ExportInvoiceToExcelRusCommand}" Visibility="Collapsed"/>
                        <MenuItem Header="Инвоисе Xml" Command="{Binding ExportInvoiceToXmlRusCommand}"  Visibility="Collapsed"/>
                        <MenuItem Header="Ապրանքների բեռնում">
                            <MenuItem Header="Պահեստ" Command="{Binding AddItemsFromStocksCommand}"  />
                            <MenuItem Header="Տեղափոխման ապրանքագիր" Command="{Binding AddItemsFromMoveInvoiceCommand}"  />
                            <MenuItem Header="Գնման ապրանքագիր" Command="{Binding AddItemsFromPurchaseInvoiceCommand}" />
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="Արտահանել">
                        <MenuItem Header="Ապրանքագիր Xml" Command="{Binding ExportInvoiceToXmlCommand}"/>
                        <MenuItem Header="Ապրանքագիր Excel" Command="{Binding ExportInvoiceToExcelCommand}"/>
                        <MenuItem Header="Инвоисе Excel" Command="{Binding ExportInvoiceToExcelRusCommand}" Visibility="Collapsed"/>
                        <MenuItem Header="Инвоисе Xml" Command="{Binding ExportInvoiceToXmlRusCommand}" Visibility="Collapsed"/>
                        <MenuItem Header="Արտահանել Ctrl+E" Command="{Binding ExportInvoiceCommand}" Visibility="Collapsed"/>
                    </MenuItem>
                    <MenuItem Header="Հաստատել (Փակել)" Command="{Binding ApproveInvoiceAndCloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}" TabIndex="5"></MenuItem>
                    <MenuItem Header="...">
                        <MenuItem Header="Հիշել Ctrl+S" Command="{Binding SaveInvoiceCommand}"  />
                        <MenuItem Header="Հաստատել" Command="{Binding ApproveInvoiceCommand}"  />
                        <Separator/>
                        <MenuItem Header="Տպել Ctrl+P" Command="{Binding PrintInvoiceCommand}" CommandParameter="{x:Static filter:PrintSizeEnum.Normal}"/>
                        <MenuItem Header="Տպել վաճառքի կտրոն Ctrl+Shift+P" Command="{Binding PrintInvoiceCommand}" CommandParameter="{x:Static filter:PrintSizeEnum.Small}"/>
                        <MenuItem Header="Տպել ՀԴՄ կտրոն" Command="{Binding PrintEcrTicketCommand}"/>
                        <Separator/>
                        <MenuItem Header="Մաքրել" Command="{Binding CleanInvoiceIemsCommand}"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </StackPanel>
    </Grid>


</UserControl>
