                    <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="3" Text="{Binding Filter, Mode=OneWayToSource}"/>
                </Grid>
                <extendedControls:ExtendedDataGrid Grid.Row="1" x:Name="DgInvoiceItems" 
                                                   ItemsSource="{Binding InvoiceItems, NotifyOnSourceUpdated=True}" 
                                                   SelectedItem="{Binding SelectedInvoiceItem}" 
                                                   AlternatingRowBackground ="GhostWhite" 
                                                   AlternationCount="2"
                                                   VerticalContentAlignment="Stretch"
                                                   CanUserAddRows="False" 
                                                   CanUserDeleteRows="False"
                                                   AutoGenerateColumns="False"
                                                   FontSize="18">
                    <DataGrid.Resources>
                        <Style x:Key="CellRightAlign">
                            <Setter Property="Control.HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.InputBindings>
                        <KeyBinding Key="Delete" Command="{Binding RemoveInvoiceItemsCommand}" CommandParameter="{Binding ElementName=DgInvoiceItems, Path=SelectedItems}"/>
                    </DataGrid.InputBindings>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="ContextMenu" Value="{DynamicResource DataGridRowContextMenuStyle}"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn IsReadOnly="True" Header="ՀՀ" Binding="{Binding DisplayOrder, Mode=OneWay}"/>
                        <DataGridTextColumn IsReadOnly="True" Header="Բրենդ" Binding="{Binding Product.Brand.Name, Mode=OneWay}"/>
                        <DataGridTextColumn IsReadOnly="True" Header="Կոդ" Binding="{Binding Code, Mode=OneWay}" />
                        <DataGridTextColumn IsReadOnly="True" Header="Բարկոդ" Binding="{Binding Product.Barcode, Mode=OneWay}" />
                        <DataGridTextColumn IsReadOnly="True" Header="Անվանում" Binding="{Binding Description, Mode=OneWay}" />
                        <DataGridTextColumn IsReadOnly="True" Header="Չմ" Binding="{Binding Mu, Mode=OneWay}" />
                        <DataGridTemplateColumn Header="Քանակ">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:InvoiceItemsModel}">
                                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:#,0.###}}" IsReadOnly="{Binding ElementName=DgInvoiceItems, Path=DataContext.DenyChangeQuantity, Mode=OneWay}"
                                             HorizontalContentAlignment="Right"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Գին">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:InvoiceItemsModel}">
                                    <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:#,0.##}}" 
                                             HorizontalContentAlignment="Right" IsReadOnly="{Binding ElementName=DgInvoiceItems, Path=DataContext.DenyChangePrice, Mode=OneWay}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Զեղչ">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="{x:Type models:InvoiceItemsModel}">
                                    <TextBox Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.##}, TargetNullValue=''}" 
                                             HorizontalContentAlignment="Right" 
                                             IsReadOnly="{Binding ElementName=DgInvoiceItems, Path=DataContext.DenyChangePrice, Mode=OneWay}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn IsReadOnly="True" Header="Գումար" Binding="{Binding Path=Amount, Mode=OneWay, StringFormat={}{0:#,0.##}}" CellStyle="{StaticResource CellRightAlign}"/>
                        <DataGridTextColumn IsReadOnly="True" Header="Պիտանի է մինչև" Binding="{Binding Path=ExpiryDate, Mode=OneWay, StringFormat=dd.MM.yyyy}" />
                        <DataGridTextColumn IsReadOnly="True" Header="Նշումներ" Binding="{Binding Path=Note}" />
                    </DataGrid.Columns>
                </extendedControls:ExtendedDataGrid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Label Content="Նշումներ"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Height="50" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <Grid Grid.Column="1" HorizontalAlignment="Right">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ընդամենը" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12"  Foreground="Green"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Invoice.Total, Mode=OneWay, StringFormat=N}"  VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100" FontSize="15" IsReadOnly="True" Foreground="Blue" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Զեղչ" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12" Width="50"  Foreground="Green"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=Invoice.Discount, StringFormat={}{0:#,0.##}}" IsEnabled="False"  VerticalAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Width="50" FontSize="15" Foreground="Blue"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Expander Grid.Row="0" Header="Վերադարձ" BorderBrush="Blue" IsExpanded="True" Margin="3">
                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">

                        <GroupBox>
                            <GroupBox.Header>
                                <Label Content="Վճարում" FontSize="10"/>
                            </GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel VerticalAlignment="Bottom" >
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Կանխիկ" VerticalAlignment="Center" />
                                        <TextBox Name="TxtPaid" Text="{Binding Path=InvoicePaid.Paid, TargetNullValue='', UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:#,#.##}}"
                                                 BorderThickness="1" BorderBrush="Black" Margin="1"
                                                 VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100"
                                                 FontSize="15" Height="25" Foreground="Blue" TabIndex="8">
                                            <i:Interaction.Behaviors>
                                                <behaviors:TextBoxBehavior IsSelectTextOnFocus="True" />
                                            </i:Interaction.Behaviors>
                                        </TextBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment =" Right">
                                        <Label Content="Անկանխիկ" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>

                                        <TextBox Text="{Binding Path=InvoicePaid.ByCheck, TargetNullValue='', UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:#,#.##}}"
                                                 BorderThickness="1" BorderBrush="Black" Margin="1"
                                                 VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100"
                                                 FontSize="15" Height="25" Foreground="Blue" TabIndex="8"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel VerticalAlignment="Bottom" >
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Կանխավճար" VerticalAlignment="Center" ToolTip="Ավելացնել որպես կանխավճար" />
                                        <TextBox Text="{Binding InvoicePaid.ReceivedPrepayment, StringFormat={}{0:#,#.##}, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                                                 BorderThickness="1" BorderBrush="Black" Margin="1"
                                                 VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100" FontSize="15" Height="25" Foreground="Blue" TabIndex="8"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment =" Right">
                                        <TextBlock Text="Պարտքի մարում" VerticalAlignment="Center" Width="100" TextWrapping="Wrap" TextAlignment="Right" ToolTip="Պատվիրատուի պարտքի մարում" />

                                        <TextBox Text="{Binding InvoicePaid.AccountsReceivable, StringFormat={}{0:#,#.##}, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                                                 BorderThickness="1" BorderBrush="Black" Margin="1"
                                                 VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="100" FontSize="15" Height="25" Foreground="Blue" TabIndex="8"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Expander>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Տող"/>
                        <TextBlock Text="{Binding ProductCount, StringFormat=N}" Foreground="Blue"/>
                        <TextBlock Text="Քանակ"/>
                        <TextBlock Text="{Binding ProductQuantity, StringFormat=N}" Foreground="Blue"/>
                        <TextBlock Text="Գումար"/>
                        <TextBlock Text="{Binding Invoice.Total, StringFormat=N}" Foreground="Blue"/>
                        <Button Style="{DynamicResource SaveButtonStyle}"
                        Command="{Binding SaveInvoiceCommand}"
                        ToolTip="Հիշել Ctrl+S" Margin="3 0"/>
                        <Button Style="{DynamicResource ApproveButtonStyle}"
                        Command="{Binding ApproveInvoiceAndCloseCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}"
                        ToolTip="Հաստատել (Փակել) Ctrl+F5" Margin="3 0"/>
                        <Menu Margin="3 0">
                            <MenuItem Background="Transparent">
                                <MenuItem.Header>
                                    <Image Source="pack://application:,,,/ResourceLibrary;component/Resources/Images/Menu/Menu_24x24.png" Width="24" Height="24"/>
                                </MenuItem.Header>
                                <MenuItem Header="Հիշել Ctrl+S" Command="{Binding SaveInvoiceCommand}"/>
                                <MenuItem Header="Հաստատել" Command="{Binding ApproveInvoiceCommand}"/>
                                <MenuItem Header="Տպել Ctrl+P" Command="{Binding PrintInvoiceCommand}" CommandParameter="{x:Static filter:PrintModeEnum.Normal}"/>
                                <MenuItem Header="Հեռացնել" Command="{Binding RemoveInvoiceCommand}"  />
                                <Separator/>
                                <MenuItem Header="Մասնակի վերադարձ ՀԴՄ -ից" Command="{Binding PrintEcrTicketCommand}"/>
                                <Separator/>
                                <MenuItem Header="Բեռնել">
                                    <MenuItem Header="Ապրանքագիր Xml"  Command="{Binding ImportInvoiceCommand}" CommandParameter="{x:Static filter:ExportImportEnum.Xml}"/>
                                    <MenuItem Header="Ապրանքագիր Excel"  Command="{Binding ImportInvoiceCommand}" CommandParameter="{x:Static filter:ExportImportEnum.Excel}"/>
                                    <MenuItem Header="Ապրանքագիր" Command="{Binding AddItemsFromInvoiceCommand}"/>
                                </MenuItem>
                                <MenuItem Header="Արտահանել" Command="{Binding ExportInvoiceCommand}" CommandParameter="{x:Static filter:ExportImportEnum.Excel}"/>
                                <Separator/>
                                <MenuItem Header="Մաքրել քանակները" Command="{Binding ClearQuantitiesCommand}"/>
                                <MenuItem Header="Մաքրել" Command="{Binding CleanInvoiceIemsCommand}"/>
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

    </DataTemplate>
</ResourceDictionary>