<implementations:EsWindow x:Class="UserControls.Views.PrintPreview.Views.UiPrintPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:implementations="clr-namespace:Shared.Implementations;assembly=Shared"
        Title="PrintPreview" MinHeight="50" MinWidth="50" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border   BorderThickness="1" BorderBrush="Black" CornerRadius="3">
                    <StackPanel Name="PageContent" Margin="3" CanVerticallyScroll="True">
                    </StackPanel>
                </Border>
            </ScrollViewer>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
                <Button Content="Տպել" Width="60" Margin="3"  Command="{Binding PrintCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                <Button Content="Փակել" Width="60" Margin="3" VerticalAlignment="Bottom" HorizontalAlignment="Right" Command="{Binding CloseCommand}"/>
            </StackPanel>
        </Grid>

    </Grid>
</implementations:EsWindow>
